<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.omar.arabtv">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ArabTV"
        android:usesCleartextTraffic="true"
        tools:targetApi="m">
        <activity android:name=".ui.Activities.GridViewMoreActivity">

        </activity>
        <activity
            android:name=".ui.Activities.ShowContentActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.ArabTV.NoActionBar">

        </activity>
        <activity
            android:name=".ui.Activities.MediaPlayerActivity"
            android:configChanges="orientation|screenSize|layoutDirection"
            android:theme="@style/Theme.ArabTV.NoActionBar">

        </activity>
        <activity
            android:name=".ui.Activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.ArabTV.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>